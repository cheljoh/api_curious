<h1>Feed</h1>

<div class="container">

  <% if current_user %>
    <div class="row">
       <div class="col s12 m7">
         <% @following.each do |name| %>
          <%post = new_blog(name) %>
            <div id="<%=name%>">
             <div class="card blue-grey darken-1">
               <% post[:photos].each do |url| %>
                 <div class="card-image">
                   <%= image_tag("#{url}") %>
                 </div>
                <% end %>
                 <div class="card-content">
                   <p><%= name %></p>
                   <p><%= post[:summary] %></p>
                    <%= button_to "like", {controller: "home", action: "update", post_id: post[:post_id], reblog_key: post[:reblog_key]} %>
                </div>
             </div> <br><br>
          </div>
        <% end %>
      </div>
    </div>
    <% else %>
    <h4>Please log in to see your feed</h4>
  <% end %>

</div>
