<div class="container">
  <h1><%= current_user.name %></h1>


  Title: <%= @blog.title %><br>
  Total Posts: <%= @blog.total_posts %><br><br>

  <div class="row">
    <div class="col s12">
      <img src="data:image/png;base64,<%= @blog.avatar %>" />
    </div>
  </div>

   <div class="row">
       <div class="col s12 m6">
         <% @blog.posts.each do |post| %>
           <div class="card blue-grey darken-1">
             <div class="card-content white-text">
               <span class="card-title"><%= post[0] %></span>
               <p><%= post[1] %></p>
             </div>
           </div>
         <% end %>
       </div>
     </div>

    <div class="row">
     <div class="col s12 m7">
       <% @blog.photos.each do |post| %>
         <div class="card blue-grey darken-1">
           <% post[:photos].each do |url| %>
             <div class="card-image">
               <%= image_tag("#{url}") %>
             </div>
            <% end %>
             <div class="card-content">
               <p><%= post[:summary] %></p>
            </div>
         </div>
        <% end %>
     </div>
   </div>

</div>
